<!-- Vista de Perfil de Usuario -->
<div class="container p-4">
    <div class="card">
        <div class="container bootstrap snippets bootdey">
            <div class="panel-body inf-content">
                <div class="row">
                    <div class="col-md-5 m-4">
                        <h3 class="text-center">Mi Perfil MenTe</h3><br>
                        <div class="table-responsive">
                            <form action="/account/profileUpdate/{{user.Identification}}" method="POST">
                                <table class="table table-user-information">
                                    <tbody>
                                        <tr>
                                            <td>
                                                <strong>
                                                    <span class="glyphicon glyphicon-asterisk text-primary"></span>
                                                    Nombre:
                                                </strong>
                                            </td>
                                            <td class="text-primary">
                                                {{user.Name}}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>
                                                    <span class="glyphicon glyphicon-user  text-primary"></span>
                                                    Telefóno:
                                                </strong>
                                            </td>
                                            <td class="text-primary">
                                                <input class="form-control" name="Phone" value={{user.Phone}}>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>
                                                    <span class="glyphicon glyphicon-cloud text-primary"></span>
                                                    Email:
                                                </strong>
                                            </td>
                                            <td class="text-primary">
                                                <input class="form-control" name= "Email" value={{user.Email}}>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>
                                                    <span class="glyphicon glyphicon-cloud text-primary"></span>
                                                    Fecha de Nacimiento:
                                                </strong>
                                            </td>
                                            <td class="text-primary">
                                                {{user.BirthDate}}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>
                                                    <span class="glyphicon glyphicon-bookmark text-primary"></span>
                                                    Provincia:
                                                </strong>
                                            </td>
                                            <td class="text-primary">
                                                <input type="text" class="form-control" name="Province"
                                                    id="ApplicantProvince" value="{{user.Province}}">
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>
                                                    <span class="glyphicon glyphicon-eye-open text-primary"></span>
                                                    Cantón:
                                                </strong>
                                            </td>
                                            <td class="text-primary">
                                                <input type="text" class="form-control" name="Canton" id="ApplicantCanton"
                                                    value="{{user.Canton}}">
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>
                                                    <span class="glyphicon glyphicon-envelope text-primary"></span>
                                                    Distrito:
                                                </strong>
                                            </td>
                                            <td class="text-primary">
                                                <input type="text" class="form-control" name="District"
                                                    id="ApplicantDistrict" value="{{user.District}}">
                                            </td>
                                        </tr>
                                        {{!-- <tr>
                                        <td>
                                            <strong>
                                                <span class="glyphicon glyphicon-calendar text-primary"></span>
                                                Ocupación:
                                            </strong>
                                        </td>
                                        <td class="text-primary">
                                            <select required class="form-control" name="ApplicantProvince" id="ApplicantProvince" placeholder="La Florida">
                                                <option value="x">Estudiante de Colegio</option>
                                                <option value="x">Estudiante de Universidad</option>
                                                <option value="x">Trabajador</option>
                                            </select>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>
                                                <span class="glyphicon glyphicon-calendar text-primary"></span>
                                                Profesión:
                                            </strong>
                                        </td>
                                        <td class="text-primary">
                                            <input class="form-control" placeholder="Ninguna">
                                        </td>
                                    </tr> --}}
                                    </tbody>
                                </table>
                                <div class="form-group">
                                    <button class="btn btn-success btn-block">Realizar Cambios</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-6 text-center">
                        <img alt="" style="width:200px;" title="" class="img-circle img-thumbnail isTooltip m-4"
                            {{!-- src="https://bootdey.com/img/Content/avatar/avatar7.png" data-original-title="Usuario"> --}}
                            <ul title="Ratings" class="list-inline ratings text-center">
                        {{!-- <li><a href="#">Editar foto<span class="glyphicon glyphicon-star"></span></a></li> --}}
                        {{!-- <li><a href="#">Mis mensajes<span class="glyphicon glyphicon-star"></span></a></li> --}}
                        <li><a href="/account/changePassword/{{user.Identification}}">Cambiar Contraseña<span
                                    class="glyphicon glyphicon-star"></span></a></li>
                        </ul>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>