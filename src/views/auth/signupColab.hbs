<div class="container p-4">
    <div class="row">
        <div class="col-md4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>SignUp</h3>
                </div>
                <div class="card-body">
                    <img src="/images/logo.jpg" alt="Logo Proyecto Mente en Accion" class="card-img-top mx-auto m-2 rounded-circle w-25">
                    <form action="/registry/signupColab" method="POST">
                        <div class="form-group">
                            <input type="text" name="fullname" placeholder="Full Name" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="identification" placeholder="Id" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="phone" placeholder="Phone" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="email" name="email" placeholder="Email" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="Age" placeholder="Age" class="form-control">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">SignUp</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>